<Page x:Class="MyProjectCursovay.Desktop.Pages.PagePlayerCreated"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyProjectCursovay.Desktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PagePlayerCreated">

    <Grid>
        <TextBlock x:Name="textBlock" TextAlignment="Center" Text="" Foreground="Red" Margin="173,109,215,109"></TextBlock>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Height="212">
                <Button Content="Создать персонажа" Margin="20" Width="130" Height="30" Click="Created_Click"/>
                <Button Content="Проверить условия уровня" Margin="20" Width="130" Height="30" FontSize="9" Click="CheckLeveling_Click"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="430,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBox x:Name="namePerson"  TextWrapping="Wrap" TextAlignment="Center" Text="Имя персонажа" Margin="10"  Width="120"/>
                <TextBlock Text="Ваши мана" TextAlignment="Center" Margin="10" Foreground="Wheat"/>
                <ProgressBar x:Name="mana" Height="10" Width="120" Foreground="Blue"  Margin="2" Maximum="100"/>
                <TextBlock Text="Ваши хп" TextAlignment="Center" Margin="10" Foreground="Wheat"/>
                <ProgressBar x:Name="healf" Height="10" Width="120" Foreground="Red" Margin="2" Maximum="100"/>
                <TextBlock Text="Ваши Армор" TextAlignment="Center" Margin="10" Foreground="Wheat"/>
                <ProgressBar x:Name="armor" Height="10" Width="120" Foreground="Green" Margin="2" Maximum="100"/>
                <ComboBox x:Name="comboBox" SelectionChanged="ComboBox_SelectionChanged" Width="120" Margin="0,20,0,2" />
            </StackPanel>
        </StackPanel>

    </Grid>
</Page>
